/* packageA/pages/photo/photo.wxss */

.camera {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  /* margin: 20px auto 0; */
  position: relative;
}

.camera image {
  position: absolute;
  width: 100%;
  height: 100%;
  /* z-index: 10; */
}

.camera camera {
  width: 100%;
  height: 100%;
}

button.takePhoto:not([size='mini']) {
  position: fixed;
  bottom: 10px;
  left: 50%;
  transform: translateX(-50%);
  width: 30vw;
  height: 80rpx;
  opacity: 50%;
  background-color: rgb(206, 206, 206);
  color: black;
  border-radius: 0;
  z-index: 100;
}